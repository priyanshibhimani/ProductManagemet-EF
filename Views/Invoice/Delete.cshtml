@model ProductManagemet.Models.Invoice

<h1>Delete Invoice</h1>

<p>Are you sure you want to delete this invoice?</p>
<dl class="row">
    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.Product?.ProductName</dd>
    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
    <dt class="col-sm-2">Total Amount</dt>
    <dd class="col-sm-10">@Model.TotalAmount</dd>
    <dt class="col-sm-2">Invoice Date</dt>
    <dd class="col-sm-10">@Model.InvoiceDate.ToString("MM/dd/yyyy")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="InvoiceId" />
    <input type="hidden" name="partyId" value="@Model.PartyId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-partyId="@Model.PartyId" class="btn btn-secondary">Cancel</a>
</form>
