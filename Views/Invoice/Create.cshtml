@model ProductManagemet.Models.Invoice

<h2>Create Invoice for Party @Model.Parties?.PartyName</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="PartyId" value="@Model.PartyId" />

    <div class="form-group">
        <label for="ProductId">Select Product</label>
        <select asp-for="ProductId" class="form-control" required>
            <option value="">Select a product</option>
            @if (ViewBag.Products != null)
            {
                foreach (var product in ViewBag.Products as List<Product>)
                {
                    <option value="@product.ProductId">@product.ProductName</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" required />
    </div>
    <br/>
    <button type="submit" class="btn btn-primary" style="float:left;">Add Product</button>
    <a asp-action="Index" asp-route-partyId="@Model.PartyId" class="btn btn-secondary" style="float:left;margin-left:10px;">Back to Invoice List</a>
</form>











