@model Product
<div class="card" style="width: 18rem;  box-shadow: 10px 10px 5px #D9D9D9;">
    <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <h3>@Model.ProductRate</h3>
        <p class="card-text">@Model.ProductDescription</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Home</a>
    </div>
</div>
