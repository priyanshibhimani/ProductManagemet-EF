@model ProductManagemet.Models.PartyWiseProduct

<h1>Edit Party Wise Product</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="PartyId"></label>
        <select asp-for="PartyId" class="form-control" asp-items="@(new SelectList(ViewBag.Parties, "PartyId", "PartyName", Model.PartyId))"></select>
        <span asp-validation-for="PartyId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductId"></label>
        <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "ProductId", "ProductName", Model.ProductId))"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>


    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

