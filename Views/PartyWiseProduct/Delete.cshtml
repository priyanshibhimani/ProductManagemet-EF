@model ProductManagemet.Models.PartyWiseProduct

<h1>Delete Party Wise Product</h1>

<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <strong>Party:</strong> @Model.Party?.PartyName <br />
        <strong>Product:</strong> @Model.Product?.ProductName <br />
        <strong>Product Rate:</strong> @Model.Product?.ProductRate <br />
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
